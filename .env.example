# Environment Variables for Recallr Frontend
# Copy this file to .env.local for local development or set these in your deployment environment

# JWT Secret for authentication tokens
# Generate a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# Base URL for API calls (client-side)
# In production, set this to your deployed app's URL
NEXT_PUBLIC_BASE_URL=https://your-deployed-app.com

# OpenRouter API configuration for flashcard generation
# Set FLASHCARD_LLM_MODE=mock to avoid live LLM calls locally
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=openai/gpt-4o-mini
FLASHCARD_LLM_MODE=real
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here
